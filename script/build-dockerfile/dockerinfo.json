ARGS:
- CM_GH_TOKEN
ARGS_DEFAULT:
  GID: '1000'
  UID: '1000'
ENTRYPOINT: '["/bin/bash", "-c"]'
ENV:
  PATH: ${PATH}:/home/cmuser/.local/bin
  TZ: US/Pacific
GID: ''
GROUP: cm
PYTHON: python3
RUN_CMDS:
- ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ >/etc/timezone
SHELL: '["/bin/bash", "-c"]'
UID: ''
USER: cmuser
WORKDIR: /home/cmuser
distros:
  arch:
    FROM: archlinux
    package-manager-get-cmd: pacman -Sy --noconfirm
    package-manager-update-cmd: pacman -Syu --noconfirm
    packages:
    - python
    - python-pip
    - git
    - wget
    - sudo
    - binutils
    versions:
      latest: {}
  rhel:
    FROM: registry.access.redhat.com/ubi9
    package-manager-get-cmd: dnf install -y
    package-manager-update-cmd: dnf update -y
    packages:
    - python3
    - python-pip
    - git
    - wget
    - sudo
    - binutils
    versions:
      '8':
        FROM: registry.access.redhat.com/ubi8
        PYTHON: python3.9
        packages:
        - python39
        - python39-pip
        - git
        - wget
        - sudo
        - binutils
        python-packages:
        - cmind
        - requests
        - giturlparse
        - tabulate
      '9': {}
  ubuntu:
    package-manager-get-cmd: apt-get install -y
    package-manager-update-cmd: apt-get update -y
    packages:
    - python3
    - python3-pip
    - git
    - sudo
    - wget
    - python3-venv
    versions:
      '18.04':
        FROM: ubuntu:18.04
      '20.04':
        FROM: ubuntu:20.04
      '22.04':
        FROM: ubuntu:22.04
      '23.04':
        FROM: ubuntu:23.04
      '24.04':
        FROM: ubuntu:24.04
python-packages:
- cmind
- requests
- giturlparse
- tabulate
